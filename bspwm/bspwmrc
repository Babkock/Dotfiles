#! /bin/sh

SXHKD_FIFO=/tmp/sxhkd-fifo
export SXHKD_FIFO

[ -e "$SXHKD_FIFO" ] && rm "$SXHKD_FIFO"
mkfifo "$SXHKD_FIFO"

[ -e "$PANEL_FIFO" ] && bspc subscribe report > "$PANEL_FIFO" &
pgrep -x panel > /dev/null || panel &

sxhkd -s "$SXHKD_FIFO" -c ~/.config/sxhkd/sxhkdrc &

feh --bg-scale ~/.config/bspwm/wallpaper.jpg &

bspc monitor -d I II III IV V VI

bspc config focused_border_color	\#CF1214
bspc config normal_border_color		\#808080
bspc config single_monocle		true
bspc config initial_polarity		first_child
bspc config focus_follows_pointer	true
bspc config border_width         	2
bspc config window_gap          	12

bspc config split_ratio          	0.5
bspc config borderless_monocle   	true
bspc config gapless_monocle      	true
bspc config center_pseudo_tiled		true

bspc rule -a Chromium desktop='^2'
bspc rule -a VLC desktop='^3' follow=on focus=on
bspc rule -a 'VLC Media Player' desktop='^3' follow=on focus=on
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

killall compton
compton &
