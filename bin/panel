#! /bin/sh

PANEL_FIFO=/tmp/panel-fifo
PANEL_WM_NAME=bspwm_panel
PANEL_HEIGHT=24
PANEL_FONT="-xos4-terminus-bold-r-*-*-20-*-*-*-*-*-*-*"

if xdo id -a "$PANEL_WM_NAME" > /dev/null ; then
	printf "%s\n" "The panel is already running." >&2
	exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

while true; do
	FREES=$(disk | head -n 1)
	echo "T$FREES Free" > "$PANEL_FIFO"
	sleep 1
done &

#xtitle -sf 'T%s\n' > "$PANEL_FIFO" &
clock -sf 'S%b %d, %I:%M:%S' -i 1 > "$PANEL_FIFO" &
bspc subscribe report > "$PANEL_FIFO" &

. panel_colors

panel_bar < "$PANEL_FIFO" | lemonbar -a 32 -u 2 -b -n "$PANEL_WM_NAME" -g x$PANEL_HEIGHT -f "$PANEL_FONT" -F "$COLOR_DEFAULT_FG" -B "$COLOR_DEFAULT_BG" | sh &

wid=$(xdo id -m -a "$PANEL_WM_NAME")
xdo above -t "$(xdo id -N Bspwm -n root | sort | head -n 1)" "$wid"

wait
